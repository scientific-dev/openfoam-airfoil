FoamFile 
{
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solver          fluid;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         2000;

deltaT          1;

writeControl    adjustableRunTime;

writeInterval   50;

purgeWrite      0;

writeFormat     ascii;

writePrecision   8;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

functions {
      forceCoeffs
    {
        type                forceCoeffs;
        libs                ("libforces.so");
        writeControl        timeStep;
        writeInterval       50;

        log         true;
        patches     (airfoil);
        rho         rhoInf;      
        CofR        (0.25 0 0);  
        pName       p;
        UName       U;  
        // !!ref
		liftDir (0 1 0);
		dragDir (1 0 0);
		rhoInf 1.225;
		magUInf 45.804;
		// !!ref
        pitchAxis   (0 0 1);
        lRef        1;
        Aref        1;       
    }

    residuals
    {
        type            residuals;
        libs            ("libutilityFunctionObjects.so");
        writeControl    timeStep;
        writeInterval   50;       
        fields          (p U nut nuTilda);  
    }

    yPlus
    {
        type            yPlus;
        libs            ("libfieldFunctionObjects.so");
        executeControl  timeStep;
        executeInterval 50;
        writeControl    timeStep;
        writeInterval   50;
        log             yes;
    }
}